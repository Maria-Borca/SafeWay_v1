<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">


    <ImageView
        android:id="@+id/back_arrow_2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="60dp"
        android:onClick="openProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/right_arrow___copy" />

    <TextView
        android:id="@+id/achievement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/opensans_bold"
        android:letterSpacing="0.20"
        android:text="@string/achievements"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/achievement">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="72dp"
            android:stackFromBottom="true"
            android:transcriptMode="alwaysScroll">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="20sp"
                android:paddingEnd="20sp">

                <TextView
                    android:id="@+id/total_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/opensans_regular"
                    android:gravity="center_vertical"
                    android:paddingVertical="15sp"
                    android:text="@string/total_distance"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/td_1000"
                        android:tag="td_1000_locked"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/td_1000" />

                    <ImageView
                        android:id="@+id/td_10000"
                        android:tag="td_10_000_locked"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/td_10_000_locked" />

                    <ImageView
                        android:id="@+id/td_25000"
                        android:tag="td_25_000_locked"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/td_25_000_locked" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/td_50000"
                        android:tag="td_50_000_locked"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/td_50_000_locked" />

                    <ImageView
                        android:id="@+id/td_100000"
                        android:tag="td_100_000_locked"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/td_100_000_locked" />

                    <View
                        android:id="@+id/view5"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/opensans_regular"
                    android:gravity="center_vertical"
                    android:paddingVertical="15sp"
                    android:text="@string/daily_distance"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="25dp">

                    <ImageView
                        android:id="@+id/dd_10"
                        android:tag="dd_10_locked"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/dd_10" />

                    <ImageView
                        android:id="@+id/dd_50"
                        android:tag="dd_50_locked"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/dd_50" />

                    <ImageView
                        android:id="@+id/dd_100"
                        android:tag="dd_100_locked"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/dd_100" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/dd_500"
                        android:tag="dd_500_locked"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/dd_500_locked" />

                    <ImageView
                        android:id="@+id/dd_1000"
                        android:tag="dd_1000_locked"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/dd_1000_locked" />

                    <View
                        android:id="@+id/view6"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <TextView
                    android:id="@+id/speed_limit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/opensans_regular"
                    android:gravity="center_vertical"
                    android:paddingVertical="15sp"
                    android:text="@string/speed_limit"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="20dp">


                    <ImageView
                        android:id="@+id/sl_7"
                        android:tag="sl_7_locked"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/sl_7" />

                    <ImageView
                        android:id="@+id/sl_30"
                        android:tag="sl_30_locked"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/sl_30_locked" />

                    <ImageView
                        android:id="@+id/sl_90"
                        android:tag="sl_90_locked"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/sl_90_locked" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/sl_180"
                        android:tag="sl_180_locked"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/sl_180_locked" />

                    <ImageView
                        android:id="@+id/sl_365"
                        android:tag="sl_365_locked"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/sl_365_locked" />

                    <View
                        android:id="@+id/view7"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <TextView
                    android:id="@+id/taking_breaks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/opensans_regular"
                    android:gravity="center_vertical"
                    android:paddingVertical="15sp"
                    android:text="@string/taking_breaks"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="20dp">

                    <ImageView
                        android:id="@+id/b_10"
                        android:tag="b_10_locked"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/b_10" />

                    <ImageView
                        android:id="@+id/b_50"
                        android:tag="b_50_locked"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/b_50" />

                    <ImageView
                        android:id="@+id/b_100"
                        android:tag="b_100_locked"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/b_100_locked" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="70dp">

                    <ImageView
                        android:id="@+id/b_500"
                        android:tag="b_500_locked"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/b_500_locked" />

                    <ImageView
                        android:id="@+id/b_1000"
                        android:tag="b_1000_locked"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/b_1000_locked" />

                    <View
                        android:id="@+id/view8"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>