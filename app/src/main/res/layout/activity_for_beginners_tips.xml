<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForBeginnersTipsActivity">

    <ImageView
        android:id="@+id/back_arrow_2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="60dp"
        android:onClick="openTipsAndTricks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/right_arrow___copy" />

    <TextView
        android:id="@+id/title"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/opensans_bold"
        android:gravity="center"
        android:letterSpacing="0.20"
        android:text="@string/tips_tricks_for_beginners"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:orientation="vertical"
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="0.052">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="200dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <TextView
                    android:id="@+id/tip1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="@string/tip35"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/underline_1"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="#9E9E9E" />

                <TextView
                    android:id="@+id/tip2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="@string/tip36"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/underline_2"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="#9E9E9E" />

                <TextView
                    android:id="@+id/tip3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="@string/tip37"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/underline_3"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="#9E9E9E" />

                <TextView
                    android:id="@+id/tip4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="@string/tip38"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/underline_4"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="#9E9E9E" />

                <TextView
                    android:id="@+id/tip5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="@string/tip39"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/underline_5"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="#9E9E9E" />

                <TextView
                    android:id="@+id/tip6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="@string/tip40"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/underline_6"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="#9E9E9E" />

                <TextView
                    android:id="@+id/tip7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="@string/tip41"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/underline_7"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="#9E9E9E" />

                <TextView
                    android:id="@+id/tip8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="@string/tip42"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>