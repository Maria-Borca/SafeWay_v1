            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/know" />

<!--            <View-->
<!--                android:id="@+id/view4"-->
